#Intialization
units       real 
dimension   3
boundary    p p p
atom_style  full 

#reading file 

read_data   final.data 

#defining force fields
bond_style      harmonic
angle_style     harmonic


pair_style hybrid lj/cut 12.0 airebo 3.0

#Carbon - Carbon 
pair_coeff * * airebo CH.airebo C NULL NULL

# Water-Carbon 
pair_coeff 1 3 lj/cut 0.114 3.19  
pair_coeff 2 3 lj/cut 0.0 0.0     

# Water-Water 
pair_coeff 1 1 lj/cut 0.1553 3.166 
pair_coeff 2 2 lj/cut 0.0 0.0      
pair_coeff 1 2 lj/cut 0.0 0.0      # O-H interaction, often set to zero


bond_coeff      1 450.0 1.0  

#grouping
group           water   type 2  3
group           surface type 1

#maintaining conditions 
fix 1 all nvt  temp 295.0  295.0  100.0
fix 2 water shake 0.0001 20 0 b 1

#output setting 
thermo 100
thermo_style custom step temp epair emol etotal press
#dumping file 

dump 1 all atom 500 smooth.lammpstrj
timestep 5.0
run 100